generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  role  String?
}

model ipc_section {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  chapter       Int
  chapter_title String
  section       String
  section_title String
  section_desc  String
}

model advocates {
  id                             String  @id @default(auto()) @map("_id") @db.ObjectId
  email                          String  @unique
  name                           String
  phone                          String
  dob                            String?
  location                       String
  verified                       Boolean @default(false)
  registrationNumber             String
  degree                         String
  experience                     String
  specialization                 String
  meetDuration                   String
  sessionCost                    String
  sessionMode                    String
  RCI_document                   String
  Malpractice_Insurance_document String?
  profilePic                     String
  bio                            String
  stars                          Int
}
